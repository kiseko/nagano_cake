<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-2 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">新規会員登録</h4>
      </div>

      <%= form_with model: @customer, url: customer_registration_path, id: 'new_admin', class: 'new_admin', local: true do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="row mx-2">
          <div class="col-lg-8 col-md-10 mx-auto">

            <div class="form-group row">
              <p class="col-md-3 pt-1">名前</p>
              <%= f.text_field :last_name, autofocus: true, placeholder:"長野", class: "form-control col-md-4" %>
              <%= f.text_field :first_name, placeholder:"恵子", class: "form-control col-md-4 offset-md-1" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">フリガナ</p>
              <%= f.text_field :last_name_kana, placeholder:"ナガノ", class: "form-control col-md-4" %>
              <%= f.text_field :first_name_kana, placeholder:"ケイコ", class: "form-control col-md-4 offset-md-1" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">メールアドレス</p>
              <%= f.text_field :email, autocomplete: "email", placeholder:"sample@example.com", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">郵便番号(ハイフンなし)</p>
              <%= f.text_field :postal_code, placeholder:"0000000", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">住所</p>
              <%= f.text_field :address, placeholder:"東京都渋⾕区代々⽊神園町0-0", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">電話番号(ハイフンなし)</p>
              <%= f.text_field :telephone_number, placeholder:"0000000000", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">パスワード(6⽂字以上)</p>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">パスワード(確認⽤)</p>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-9" %>
            </div>

          </div>
        </div>

        <div class="text-center">
          <%= f.submit "新規登録", class:"btn btn-success mt-3 px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
