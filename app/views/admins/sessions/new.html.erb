<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">管理者ログイン</h4>
      </div>

      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="row mx-2">
          <div class="col-lg-9 mx-auto">

            <div class="form-group row">
              <p class="col-md-3 pt-1 mb-0">メールアドレス</p>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1 mb-0">パスワード</p>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-9" %>
            </div>

          </div>
        </div>

        <div class="text-center">
          <%= f.submit "ログイン", class:"btn btn-primary mt-3 px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
