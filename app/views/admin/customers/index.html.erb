<div class="container">

  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">会員一覧</h4>
      </div>

      <div class="row">
        <div class="col-12">
          <table class="table">
            <thead>
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td>
                    <%= customer.id %>
                  </td>
                  <td>
                    <%= link_to admin_customer_path(customer.id) do %>
                      <%= customer.last_name + customer.first_name %>
                    <% end %>
                  </td>
                  <td>
                    <%= customer.email%>
                  </td>
                  <% if customer.is_active? %>
                    <td class="text-success">有効</td>
                  <% else %>
                    <td class="text-secondary">退会</td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
          <h5 class="d-flex justify-content-center"><%= paginate @customers %></h5>
        </div>
      </div>

    </div>
  </div>

</div>