<div class="container">

  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-2 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">会員一覧</h4>
      </div>


      <div class="col-md-8">

        <div class="row">
          <div class="col-sm-4">
            <p>会員ID</p>
          </div>
          <div class="col-sm-8">
            <p class="lead"><%= @customer.id %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-4">
            <p>氏名</p>
          </div>
          <div class="col-sm-8">
            <p class="lead d-inline-block"><%= @customer.last_name %></p>
            <p class="lead pl-2 d-inline-block"><%= @customer.first_name %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-4">
            <p>フリガナ</p>
          </div>
          <div class="col-sm-8">
            <p class="lead d-inline-block"><%= @customer.last_name_kana %></p>
            <p class="lead pl-2 d-inline-block"><%= @customer.first_name_kana %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-4">
            <p>郵便番号</p>
          </div>
          <div class="col-sm-8">
            <p class="lead"><%= @customer.postal_code %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-4">
            <p>住所</p>
          </div>
          <div class="col-sm-8">
            <p class="lead"><%= @customer.address %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-4">
            <p>電話番号</p>
          </div>
          <div class="col-sm-8">
            <p class="lead"><%= @customer.telephone_number %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-4">
            <p>メールアドレス</p>
          </div>
          <div class="col-sm-8">
            <p class="lead"><%= @customer.email %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-4">
            <p>会員ステータス</p>
          </div>
          <div class="col-sm-8">
            <% if @customer.is_active? %>
              <h5 class="text-success"><strong>有効</strong></h5>
            <% else %>
              <h5 class="text-secondary"><strong>退会</strong></h5>
            <% end %>
            <div class="pt-4">
              <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
              <%= link_to "注文一覧を見る", admin_customer_orders_path(@customer.id), class: "btn btn-primary ml-5" %>
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>

</div>