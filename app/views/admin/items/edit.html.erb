<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">商品新規登録</h4>
      </div>

      <%= form_with model: @item, url: admin_item_path(@item.id), local: true do |f| %>
        <div class="row mx-2">
          <div class="col-lg-8 col-md-10 mx-auto">

            <div class="form-group row">
              <p class="col-md-4 mb-0">商品画像</p>
              <%= f.attachment_field :image, class: "form-control-file col-md-8" %>
             </div>

            <div class="form-group row">
              <p class="col-md-4 pt-1 mb-0">商品名</p>
              <%= f.text_field :name, placeholder:"商品名", class: "form-control col-md-8" %>
            </div>

            <div class="form-group row">
              <p class="col-md-4 pt-1 mb-0">商品説明</p>
              <%= f.text_area :introduction, placeholder:"ここに説明を記述します", class: "form-control col-md-8" %>
            </div>

            <div class="form-group row">
              <p class="col-md-4 pt-1 mb-0">ジャンル</p>
              <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください--"}, {class: "form-control col-md-8"}) %>
            </div>

            <div class="row form-group">
              <p class="col-md-4 mt-1 mb-0">税抜価格</p>
              <div class="col-md-8 px-0 input-group">
                <%= f.number_field :price, placeholder:"1000", class: "form-control", min: 1 %>
                <div class="input-group-append"><p class="input-group-text">円</p></div>
              </div>
            </div>

            <div class="form-group row">
              <p class="col-md-4 pt-1 mb-0">販売ステータス</p>
              <div class="col-md-8">
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
              </div>
            </div>

          </div>
        </div>

        <div class="text-center pt-4">
          <%= f.submit "変更を保存", class:"btn btn-success px-5" %>
        </div>
      <% end %>

    </div>
  </div>
</div>