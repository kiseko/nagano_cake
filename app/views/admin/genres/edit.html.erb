<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-2 mb-4 bg-light d-inline-block">
      <h4 class="px-2 pt-2">ジャンル編集</h4>
      </div>

      <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
        <div class="form-group row pb-5">
          <p class="col-md-3 col-lg-2">ジャンル名</p>
          <%= f.text_field :name, class: "form-control col-md-3 col-lg-2" %>
          <%= f.submit "変更を保存", class:"btn btn-success ml-3 px-3" %>
        </div>
      <% end %>

    </div>
  </div>
</div>