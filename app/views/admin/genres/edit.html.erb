<div class="container" style="min-width: 370px;">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4 bg-light d-inline-block">
      <h4 class="px-2 pt-2">ジャンル編集</h4>
      </div>

      <% if @genre.errors.any? %>
        <div class="pb-2 text-danger">
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
        <div class="row pb-5 mx-1">
          <p class="col-auto pt-1">ジャンル名</p>
          <div class="col-auto">
            <div class="row form-inline">
              <%= f.text_field :name, class: "form-control col-7" %>
              <%= f.submit "変更を保存", class:"btn btn-success col-4 ml-3" %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>