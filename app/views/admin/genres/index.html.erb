<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-2 mb-4 bg-light d-inline-block">
      <h4 class="px-2 pt-2">ジャンル一覧・追加</h4>
      </div>

      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        <div class="form-group row pb-5">
          <p class="col-md-3 col-lg-2">ジャンル名</p>
          <%= f.text_field :name, class: "form-control col-md-3 col-lg-2" %>
          <%= f.submit "新規登録", class:"btn btn-success ml-3 px-3" %>
        </div>
      <% end %>

      <div class="row">
        <table class="table table-hover col-md-8 col-lg-6">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>


    </div>
  </div>
</div>