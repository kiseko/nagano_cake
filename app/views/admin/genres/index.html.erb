<div class="container" style="min-width: 300px;">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4 bg-light d-inline-block">
      <h4 class="px-4 pt-2">ジャンル一覧・追加</h4>
      </div>

      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        <div class="row pb-5 mx-1">
          <p class="col-auto pt-1">ジャンル名</p>
          <div class="col-auto">
            <div class="row form-inline">
              <%= f.text_field :name, class: "form-control col-7" %>
              <%= f.submit "新規登録", class:"btn btn-success col-4 ml-3" %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="row mx-1">
        <table class="table col-md-8 col-lg-6">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>


    </div>
  </div>
</div>