<div class="container">

  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">注⽂履歴⼀覧</h4>
      </div>


      <div class="row">
        <div class="col-12">
          <table class="table">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td>
                    <%= link_to admin_order_path(order.id) do %>
                      <%= order.created_at.strftime("%Y/%m/%d") %>
                    <% end %>
                  </td>
                  <td>
                    <%= order.customer.last_name + order.customer.first_name %>
                  </td>
                  <td>
                    <%= order.order_items.length %>
                  </td>
                  <% if order.status == "入金待ち" %>
                    <td>入金待ち</td>
                  <% elsif order.status == "入金確認" %>
                    <td>入金確認</td>
                  <% elsif order.status == "製作中" %>
                    <td>製作中</td>
                  <% elsif order.status == "発送準備中" %>
                    <td>発送準備中</td>
                    <% elsif order.status == "発送済み" %>
                    <td>発送済み</td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>

</div>