<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100 text-nowrap">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to root_path class: "navbar-brand p-3" do %>
            <%= image_tag('NaganoCake.png') %>
          <% end %>
          <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "注⽂履歴⼀覧", admin_root_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル⼀覧", admin_genres_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <% elsif customer_signed_in? %>
              <li class="nav-item">
              <%= link_to "マイページ", customers_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link ml-3 btn border border-light' %>
            <% else %>
            <li class="nav-item">
              <%= link_to "About", about_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class: 'nav-link ml-3 btn border border-light' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-light pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-12 text-center text-secondary">
            <p>Copyright © NAGANO_CAKE Inc. All Rights Reserved.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
