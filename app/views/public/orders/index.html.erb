<div class="container">

  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">注⽂履歴⼀覧</h4>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-12">

      <table class="table table-bordered table-hover">
        <thead class="bg-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
             <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at.strftime("%Y/%m/%d") %>
              </td>
              <td>
                <%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td class="text-nowrap">
                <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %><br>
                <% end %>
              </td>
              <td>
                <%= order.total_price.to_s(:delimited) %>円
              </td>
              <td>
                <% if order.status == "入金待ち" %>
                  <p>入金待ち</p>
                <% elsif order.status == "入金確認中" %>
                  <p>入金確認</p>
                <% elsif order.status == "制作中" %>
                   <p>制作中</p>
                <% elsif order.status == "発送準備中" %>
                  <p>発送準備中</p>
                <% elsif order.status == "発送済み" %>
                  <p>発送済み</p>
                <% end %>
              </td>
              <td class="text-center pt-4">
                <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

</div>