<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-2 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">新規会員登録</h4>
      </div>

      <%= form_with model: current_customer, url: customers_path, local: true do |f| %>

        <div class="row mx-2">
          <div class="col-lg-8 col-md-10 mx-auto">

            <div class="form-group row">
              <p class="col-md-3 pt-1">名前</p>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "email", placeholder:"長野", class: "form-control col-md-4" %>
              <%= f.text_field :first_name, autocomplete: "email", placeholder:"恵子", class: "form-control col-md-4 offset-md-1" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">フリガナ</p>
              <%= f.text_field :last_name_kana, autocomplete: "email", placeholder:"ナガノ", class: "form-control col-md-4" %>
              <%= f.text_field :first_name_kana, autocomplete: "email", placeholder:"ケイコ", class: "form-control col-md-4 offset-md-1" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">郵便番号</p>
              <%= f.text_field :postal_code, autocomplete: "email", placeholder:"0000000", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">住所</p>
              <%= f.text_field :address, autocomplete: "email", placeholder:"東京都渋⾕区代々⽊神園町0-0", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">電話番号</p>
              <%= f.text_field :telephone_number, autocomplete: "email", placeholder:"0000000000", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <p class="col-md-3 pt-1">メールアドレス</p>
              <%= f.text_field :email, autocomplete: "email", placeholder:"sample@example.com", class: "form-control col-md-9" %>
            </div>
            
            <div class="row">
          <div class="col-6 col-md-5 offset-md-3 p-0">
            <%= f.submit "編集内容を保存", class:"btn btn-success mt-3 px-4" %>
          </div>
          <div class="col-6 col-md-4 text-right p-0">
            <%= link_to "退会する", leave_customer_path, class:"btn btn-danger mt-3 px-4" %>
          </div>
        </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>