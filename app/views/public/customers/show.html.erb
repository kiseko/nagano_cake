<div class="container">

  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4 bg-light d-inline-block">
        <h4 class="px-2 pt-2">ショッピングカート</h4>
      </div>

      <div class="row mb-3">
        <h5 class="col-3 col-lg-2 pt-2"><strong>登録情報</strong></h5>
        <div class="col-auto p-0">
          <%= link_to "編集する", edit_customers_path, class: "btn btn-success px-4" %>
        </div>
      </div>

      <div class="row">
        <div class="col-12 col-lg-8">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td class="bg-light w-25">氏名</td>
                <td>
                  <%= current_customer.last_name %>
                  <%= current_customer.first_name %>
                </td>
              </tr>
              <tr>
                <td class="bg-light">カナ</td>
                <td>
                  <%= current_customer.last_name_kana %>
                  <%= current_customer.first_name_kana %>
                </td>
              </tr>
              <tr>
                <td class="bg-light">郵便番号</td>
                <td>
                  <%= current_customer.postal_code %>
                </td>
              </tr>
              <tr>
                <td class="bg-light">住所</td>
                <td>
                  <%= current_customer.address %>
                </td>
              </tr>
              <tr>
                <td class="bg-light">電話番号</td>
                <td>
                  <%= current_customer.telephone_number %>
                </td>
              </tr>
              <tr>
                <td class="bg-light text-nowrap">メールアドレス</td>
                <td>
                  <%= current_customer.email %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row mb-3">
        <h5 class="col-3 col-lg-2 pt-2"><strong>配送先</strong></h5>
        <div class="col-auto p-0">
          <%= link_to "一覧を見る", new_order_path, class: "btn btn-primary px-4" %>
        </div>
      </div>

      <div class="row">
        <h5 class="col-3 col-lg-2"><strong>注文履歴</strong></h5>
        <div class="col-auto p-0">
          <%= link_to "一覧を見る", new_order_path, class: "btn btn-primary px-4" %>
        </div>
      </div>

    </div>
  </div>

</div>