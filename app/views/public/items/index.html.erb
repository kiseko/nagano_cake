<div class="container" style="min-width: 330px;">

  <div class="row">
    <div class="col-md-10 mx-auto">

      <div class="mt-4 mb-4">
        <h4 class="px-2 pt-2">商品一覧<small>(全<%= @items.length %>件)<small></h4>
      </div>

      <div class="row">
        <% @items.each do |item| %>
          <div class="col-4 col-md-3 px-2 pb-3">
            <div class="card">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, :fill, 400, 300, format: "jpg", class: "card-img-top" %>
              <% end %>
              <%= link_to item_path(item.id), class: "text-dark" do %>
                <div class="card-body">
                  <h6 class="card-title text-truncate"><%= item.name %></h6>
                  <h6 class="card-text">￥<%= item.price.to_s(:delimited) %></h6>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>

</div>